@model IEnumerable<Job_search.Models.Jobs>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayoutPage.cshtml";
}
<style>

    .bg-info {
        border: 2px solid #00ffff;
    }

    h3 {
        padding-top: 10px;
    }

    .button1 {
        padding-top: 10px;
        float: left;
        margin-left: 10%;
    }

    th {
        width:5%;  
    }
    .alert:hover{
        background-color:#fbfaca;
    }

</style>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>

    <table class="bg-info col-md-12 text-center">
        <tr>
            <td>
                <h3>قائمة الوظائف</h3>
            </td>
            <td class="button1">
                @Html.ActionLink("إضافة وظيفة جديدة", "Create", null, new { @class = " btn btn-outline-dark" })
            </td>
        </tr>
    </table>
    <table class="table table-bordered text-sm-center ">

        <tr class="alert-info">
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Category.Categoryname)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.JobTitle)
            </th>
            <th class="text-center" style="width:5%;">
                @Html.DisplayNameFor(model => model.JobContent)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.JobImage)
            </th>
            <th ></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr class="alert table-hover">
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Categoryname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobTitle)
                </td>
                <td style="text-align:start; text-align:justify;">
                    @Html.DisplayFor(modelItem => item.JobContent)
                </td>
                <td>
                    <img src="~/Uploads/@Html.DisplayFor(modelItem => item.JobImage)"
                         class="thumbnail" style="width:70px; height:70px" />
                </td>
                <td>
                    @Html.ActionLink("تعديل", "Edit", new { id = item.Id }, new { @class = " btn btn-success btn-sm" })
                    @Html.ActionLink("التفاصيل", "Details", new { id = item.Id }, new { @class = " btn btn-warning btn-sm" })
                    @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = " btn btn-danger btn-sm" })
                </td>
            </tr>
        }

    </table>
    </body>
</html>