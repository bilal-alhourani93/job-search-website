@model IEnumerable<Job_search.Models.JobsViewModelByGroup>

@{
    ViewBag.Title = "GetJobsByPublisher";
    Layout = "~/Views/Shared/_MainLayoutPage.cshtml";
}
<div class="col-md-12"style="background-color:#f0f0f0; min-height:600px;">
    <br />
    @foreach (var gr in Model)
    {
        <h3 class="col-md-12 card-header text-lg-center bg-info text-white">@gr.jobTitle</h3>
        <table class="table table-bordered table-hover">
            <tr class="card-header alert-info">
                <th>
                    اسم الباحث
                </th>
                <th>
                    نص الرسالة
                </th>
                <th>
                    تاريخ الارسال
                </th>
            </tr>

            @foreach (var item in gr.Items)
            {
                <tr>
                    <td>
                        @item.user.UserName
                    </td>
                    <td>
                        @item.Massage
                    </td>
                    <td>
                        @item.ApplyDate
                    </td>
                </tr>

            }
        </table>
    }

</div>
