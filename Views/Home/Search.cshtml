@model IEnumerable<Job_search.Models.Jobs>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_MainLayoutPage.cshtml";
}

<style>
    .card-header{
        color:white;
        margin-top:-40px;
        margin-bottom:20px;
    }
    .card-img {
        width: 100%;
        height: 60%;
    }
</style>
    <div class="container jumbotron">
        <h4 class="card-header bg-secondary">نتائج البحث </h4>

        <div class="row">
            @foreach (var Subitem in Model)
            {
            <div class="col-md-3 card-footer alert-dark" style="margin-left:20px;margin-bottom:30px;height:380px;">
                <img src="~/Uploads/@Subitem.JobImage" class="card-img "/>
                <hr />
                <h6><strong>@Html.DisplayFor(modelItem => Subitem.JobTitle)</strong></h6>
                @Html.ActionLink("التفاصيل", "Details", new { jobId = Subitem.Id }, new { @class = "btn btn-primary " })
            </div>
            }
        </div>
    </div>
